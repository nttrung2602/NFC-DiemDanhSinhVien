<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    app:cardElevation="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:background="#802C79B6"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtMaSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="MSSV: N19DCCN216"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtHoTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên: Nguyễn Thành Trung"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/txtMaSV"
            app:layout_constraintTop_toBottomOf="@+id/txtMaSV" />
        <TextView
            android:id="@+id/txtMaLop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã lớp: D19CQCN03"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/txtHoTen"
            app:layout_constraintTop_toBottomOf="@+id/txtHoTen" />

        <TextView
            android:gravity="center"
            android:id="@+id/btnCapNhat"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@drawable/radius_button"
            android:backgroundTint="#B30AF314"
            android:padding="7dp"
            android:text="Cập nhật"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btnHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/radius_button"
            android:backgroundTint="#99E3190B"
            android:padding="7dp"
            android:text="Hủy"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="@+id/btnCapNhat"
            app:layout_constraintStart_toStartOf="@+id/btnCapNhat"
            app:layout_constraintTop_toBottomOf="@+id/btnCapNhat" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
